<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/imagepers"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:src="@drawable/doctor"/>

    <TextView
        android:fontFamily="cursive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="#0d6e6a"
        android:textSize="35dp"
        android:textStyle="bold"
        android:letterSpacing="0.03"/>
    <EditText
        android:id="@+id/prenom_pers"
        android:layout_width="350dp"
        android:fontFamily="cursive"
        android:layout_height="45dp"
        android:background="@drawable/border"
        android:hint="Prenom"
        android:textColorHint="#0d6e6a"
        android:textColor="#0d6e6a"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"/>
    <EditText
        android:id="@+id/nom_pers"
        android:layout_width="350dp"
        android:fontFamily="cursive"
        android:layout_height="45dp"
        android:background="@drawable/border"
        android:hint="Nom"
        android:textColorHint="#0d6e6a"
        android:textColor="#0d6e6a"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"/>


    <EditText
        android:id="@+id/email_pers"
        android:layout_width="350dp"
        android:fontFamily="cursive"
        android:layout_height="45dp"
        android:background="@drawable/border"
        android:hint="Email"
        android:textColorHint="#0d6e6a"
        android:textColor="#0d6e6a"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"/>

    <EditText
        android:id="@+id/mdp_pers"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:background="@drawable/border"
        android:hint="Password"
        android:textColorHint="#0d6e6a"
        android:textColor="#0d6e6a"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:fontFamily="cursive"
        android:paddingLeft="20dp"/>


    <EditText
        android:id="@+id/specialite"
        android:layout_width="350dp"
        android:enabled="false"
        android:layout_height="45dp"
        android:background="@drawable/border"
        android:hint="Spécialité"
        android:textColorHint="#0d6e6a"
        android:textColor="#0d6e6a"
        android:textStyle="bold"
        android:textSize="18dp"
        android:fontFamily="cursive"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textchoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Choisir un médecin : "
            android:layout_marginLeft="90dp"
            android:fontFamily="cursive"
            android:textColor="#0d6e6a"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:letterSpacing="0.03"/>
        <Spinner
            android:visibility="gone"
            android:id="@+id/choice_patient"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:entries="@array/Spinner_items"
            android:layout_marginBottom="15dp"
            android:layout_weight="0.4">
        </Spinner>


    </LinearLayout>



    <Button
        android:id="@+id/register_pers"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/design_button"
        android:text="Register"
        android:textColor="#FFF"
        android:textSize="18dp"
        android:textStyle="bold" />

