<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/imagepers"
        android:layout_width="500dp"
        android:layout_height="150dp"
        android:src="@drawable/doctor"/>

    <TextView
        android:fontFamily="cursive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="#0d6e6a"
        android:textSize="35dp"
        android:textStyle="bold"
        android:letterSpacing="0.03"/>
    <EditText
        android:id="@+id/prenom_pers"
        android:layout_width="350dp"
        android:fontFamily="cursive"
        android:layout_height="45dp"
        android:background="@drawable/border"
        android:text="Prenom"
        android:textColor="#0d6e6a"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"/>
    <EditText
        android:id="@+id/nom_pers"
        android:layout_width="350dp"
        android:fontFamily="cursive"
        android:layout_height="45dp"
        android:background="@drawable/border"
        android:text="Nom"
        android:textColor="#0d6e6a"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"/>


    <EditText
        android:id="@+id/email_pers"
        android:layout_width="350dp"
        android:fontFamily="cursive"
        android:layout_height="45dp"
        android:background="@drawable/border"
        android:text="Email"
        android:textColor="#0d6e6a"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"/>

    <EditText
        android:id="@+id/mdp_pers"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:background="@drawable/border"
        android:text="Password"
        android:textColor="#0d6e6a"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:fontFamily="cursive"
        android:paddingLeft="20dp"/>


    <EditText
        android:id="@+id/specialite"
        android:layout_width="350dp"
        android:enabled="false"
        android:layout_height="45dp"
        android:background="@drawable/border"
        android:text="Spécialité"
        android:textColor="#0d6e6a"
        android:textStyle="bold"
        android:textSize="18dp"
        android:fontFamily="cursive"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"/>

    <Button
        android:id="@+id/register_pers"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/design_button"
        android:text="Register"
        android:textColor="#FFF"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="La santé avant tout"
        android:fontFamily="cursive"
        android:textColor="#0d6e6a"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="20dp"/>

   <!-- <Button
        android:id="@+id/login_doc"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/design_button"
        android:text="Login"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="25dp"/>-->

</LinearLayout>
