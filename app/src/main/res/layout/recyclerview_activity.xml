<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="230dp"
    android:layout_gravity="center"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="5dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_activity"
                android:layout_marginTop="6dp"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/activity"
                android:layout_marginLeft="65dp"

                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/line1"
                android:layout_below="@id/img_activity"
                android:layout_centerInParent="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Titre : "
                    android:layout_marginTop="5dp"
                    android:textSize="20sp"
                    android:fontFamily="cursive"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    />
                <TextView
                    android:id="@+id/titre_activity"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nom_activity"
                    android:textSize="20sp"
                    android:fontFamily="cursive"
                    android:layout_centerInParent="true"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/line1"
                android:id="@+id/line2"
                android:layout_centerInParent="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Description : "
                    android:textSize="20sp"
                    android:fontFamily="cursive"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    />
                <TextView
                    android:id="@+id/description_activity"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="description_activity"
                    android:textSize="20sp"
                    android:fontFamily="cursive"
                    android:layout_centerInParent="true"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/line2"
                android:id="@+id/line3"
                android:layout_centerInParent="true">
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DurÃ©e : "
                    android:textSize="20sp"
                    android:fontFamily="cursive"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    />
                <TextView
                    android:id="@+id/duree_activity"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="duree_activity"
                    android:textSize="20sp"
                    android:fontFamily="cursive"

                    android:layout_centerInParent="true"
                    />
            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>


