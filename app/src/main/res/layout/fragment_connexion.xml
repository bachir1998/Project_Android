<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/image_connect"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:src="@drawable/doctor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:fontFamily="cursive"
        android:textColor="#0d6e6a"
        android:textSize="35dp"
        android:textStyle="bold"
        android:letterSpacing="0.03"/>

    <EditText
        android:id="@+id/connect_pers_email"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:fontFamily="cursive"
        android:background="@drawable/border"
        android:text="Email"
        android:textColor="#0d6e6a"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"/>

    <EditText
        android:id="@+id/connect_pers_mdp"
        android:fontFamily="cursive"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:background="@drawable/border"
        android:text="Password"
        android:textColor="#0d6e6a"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"/>

    <EditText
        android:id="@+id/connect_pers_specialite"
        android:layout_width="350dp"
        android:enabled="false"
        android:layout_height="45dp"
        android:background="@drawable/border"
        android:text="Spécialité"
        android:textColor="#0d6e6a"
        android:textStyle="bold"
        android:textSize="18dp"
        android:fontFamily="cursive"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget Password?"
        android:textColor="#0d6e6a"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_gravity="end"
        android:fontFamily="cursive"
        android:layout_marginTop="15dp"
        android:layout_marginRight="35dp"/>

    <Button
        android:id="@+id/btn_connect"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/design_button"
        android:text="Login"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:layout_marginTop="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="La santé avant tout !"
        android:textColor="#0d6e6a"
        android:textStyle="bold"
        android:textSize="25dp"
        android:fontFamily="cursive"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="25dp"/>

   <!-- <Button
        android:id="@+id/btn_inscrip"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/design_button"
        android:text="Register"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="25dp"/>-->


</LinearLayout>